{
  "schemaVersion": 1,
  "id": "simplyimprovedterrain",
  "version": "${version}",

  "name": "Simply Improved Terrain",
  "description": "Rewrites terrain generation components in Minecraft to improve their visual results.",
  "authors": [
    "K.jpg"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "MIT License",
  "icon": "assets/simplyimprovedterrain/simplyimprovedterrain.png",

  "accessWidener": "simplyimprovedterrain.aw",

  "environment": "*",
  "entrypoints": {
    "main": [
      "jpg.k.simplyimprovedterrain.SimplyImprovedTerrain"
    ]
  },
  "mixins": [
    "simplyimprovedterrain.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "flamingo": "*"
  },

  "custom": {
    "lithium:options": {
      "mixin.gen.fast_island_noise": false
    }
  }
}
